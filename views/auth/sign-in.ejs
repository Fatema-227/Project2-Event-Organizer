<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sign in</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <%- include("../partials/_navbar.ejs") %>


  <form class="signin-form-container" action="/auth/sign-in" method="post">
    <h1 class="signin-page-title">Sign in</h1>

    <label class="signin-form-label" for="username">Username</label>
    <input class="signin-form-input" type="text" name="username" id="username" />

    <br />

    <label class="signin-form-label" for="Password">Password</label>
    <input class="signin-form-input" type="password" name="password" id="password" />

    <br />

    <button class="signin-form-button" type="submit">Sign In</button>

  </form>
</body>
