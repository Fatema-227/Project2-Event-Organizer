<head>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<%-include("../partials/_navbar")%>
<div class="container create-event-container">
  <header>
    <h1>Edit <%= event.title %></h1>
  </header>

  <form action="/events/<%= event._id %>?_method=PUT" method="post" class="event-form">
    <div class="form-group">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" value="<%=event.title%>" />
    </div>
<div class="form-group">

  <label for="description">Description</label>
  <input type="text" name="description" id="description" value="<%=event.description%>"/>
</div>
<div class="form-group">

  <label for="time">Time</label>
  <input type="time" name="time" id="time" value="<%=event.time%>"required />
</div>
<div class="form-group">

  <label for="date">Date</label>
  <input type="date" name="date" id="date" value="<%=event.date%>"required />
  <h6 style="margin: 0; color: red; display: none;" class="dateTime-warning">*You should choose date and time after the current date and time</h6>
</div>
<div class="form-group">

  <label for="address">Address</label>
    <input type="text" name="address" id="address" value="<%=event.address%>" />
</div>
<div class="form-group checkbox-group">

  <label for="isPublic">Is public?</label>
    <input type="checkbox" name="isPublic" id="isPublic" <%if(event.isPublic){%> checked <%}%>/>
</div>

  <div  class="form-group" id="publicContainer" <%if(!event.isPublic){%> style="display: none" <%}%>>
    <label for="limit">Guests limit</label>
    <input type="number" name="limit" id="limit" value="<%=event.limit%>" min="0"/>
  </div>

  <button type="submit" id="draft">Update</button>
</form>
</div>
<script>
    isPublic.addEventListener("change", () => {
      if (isPublic.checked) {
        publicContainer.style.display = "block"
        document.getElementById("limit").required=true
      } else {
        publicContainer.style.display = "none"
        document.getElementById("limit").value = ""
      }
    })

  const dateInput = document.getElementById('date')
  const timeInput = document.getElementById('time')
  const validateTime=()=> {
    const selectedDate = new Date(dateInput.value)
    const today = new Date()
    if (
      selectedDate.toDateString() === today.toDateString() &&
      timeInput.value
    ) {
      const [h,m] = timeInput.value.split(':')
      const selectedTime = new Date(selectedDate)
      selectedTime.setHours(h, m, 0, 0)
      if (selectedTime < today) {
        document.querySelector(".dateTime-warning").style.display="block"
        timeInput.value = ''
      }
      else{
        document.querySelector(".dateTime-warning").style.display="none"
      }
    }
  }
  dateInput.addEventListener('change', validateTime)
  timeInput.addEventListener('change', validateTime)
</script>
